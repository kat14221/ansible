# Debian Router - Gateway central

# Global configuration
authoritative;

# Log level
log-facility local7;

# Subnet configuration
subnet6 {{ dhcpv6_subnet }}/{{ dhcpv6_prefix }} {
    # Rango de IPs para asignaci칩n din치mica
    range6 {{ dhcpv6_range_start }} {{ dhcpv6_range_end }};

    # Tiempo de concesi칩n (lease time)
    default-lease-time 3600;
    max-lease-time 7200;

    # DNS Servers
    option dhcp6.name-servers {% for dns in dhcpv6_dns_servers %}{{ dns }}{% if not loop.last %}, {% endif %}{% endfor %};

    # Domain search list
    option dhcp6.domain-search "local";
}

# ============================================
# Reservas de IP fijas por MAC (Host Declarations)
# ============================================

# Windows PC - IP fija ::11
host windows-pc {
    hardware ethernet 00:0c:29:87:97:38;
    fixed-address6 2025:db8:101::11;
}

# Ubuntu PC - IP fija ::10
host ubuntu-pc {
    hardware ethernet 00:0c:29:35:41:60;
    fixed-address6 2025:db8:101::10;
}