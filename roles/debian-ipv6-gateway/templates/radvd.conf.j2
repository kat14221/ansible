# RADVD Configuration - IPv6 Router Advertisements
# Subnet: 2025:db8:101::/64
# Auto-generated by Ansible
# CONFIGURACIÓN: Solo DHCPv6, NO SLAAC (para IPs cortas legibles)

interface {{ lan_interface }} {
    AdvSendAdvert on;
    MinRtrAdvInterval 200;
    MaxRtrAdvInterval 600;
    AdvDefaultLifetime 1800;
    AdvReachableTime 0;
    AdvRetransTimer 0;

    # Prefijo anunciado pero SIN autoconfiguración (SLAAC deshabilitado)
    prefix 2025:db8:101::/64 {
        AdvOnLink on;
        AdvAutonomous off;  # ← DESHABILITADO: Evita IPs largas automáticas
        AdvRouterAddr off;
        AdvValidLifetime 86400;
        AdvPreferredLifetime 14400;
    };

    RDNSS 2025:db8:101::1 {
        AdvRDNSSLifetime 3600;
    };

    DNSSL lab.local {
        AdvDNSSLLifetime 3600;
    };

    AdvCurHopLimit 64;
    AdvManagedFlag on;      # ← Fuerza DHCPv6 para direcciones
    AdvOtherConfigFlag on;  # ← Fuerza DHCPv6 para otra config
};
