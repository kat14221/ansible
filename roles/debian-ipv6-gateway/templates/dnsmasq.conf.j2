# DNS Configuration
port=53
listen-address=2025:db8:101::1
listen-address=127.0.0.1
cache-size=1000
neg-ttl=600
dns-forward-max=150

# Local DNS records
address=/debian-router.lab/2025:db8:101::1
address=/router.lab/2025:db8:101::1
address=/ubuntu-pc.lab/2025:db8:101::10
address=/windows-pc.lab/2025:db8:101::11

# Upstream DNS (forwarders)
server=1.1.1.1
server=8.8.8.8
server=2001:4860:4860::8888

# DHCPv6 Integration
